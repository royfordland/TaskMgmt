@page "/admin/taskstatus/list"
@rendermode InteractiveServer

@using System.Net.Http.Json
@using Frontend.Services
@using Frontend.Services.Constants
@inject Frontend.Services.Interfaces.IJsTokenStorage JsTokenStorage
@inject HttpClient Http

<PageTitle>Admin -Task Status</PageTitle>

<h1>Admin - Task Status</h1>

<p>This component shows tasks currently in the database.</p>

<p>Click <a href="/admin/taskstatus/edit">here</a> to add a new task.</p>

@if (!string.IsNullOrEmpty(Message))
{
    <p>@Message</p>
}

@if (taskStatuses == null)
{
    <p><em>Loading...</em></p>
}
else if (taskStatuses.Count == 0)
{
    <p><em>No task statuses found.</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Status</th>
                <th>Is Active</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var taskStatus in taskStatuses)
            {
                <tr>
                    <td>@taskStatus.Status</td>
                    <td>@(taskStatus.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        <a class="btn btn-link p-0" href="@($"/admin/taskstatus/edit?id={taskStatus.Id}")" title="Edit" aria-label="Edit">
                            <!-- I asked Copilot for a pencil icon and it gave me this svg stuff. -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align:middle">
                                <path d="M12 20h9" />
                                <path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private string? Message;
    private List<TaskStatusItem> taskStatuses = [];

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        try
        {
            if (firstRender)
            {
                var token = await JsTokenStorage!.GetTokenAsync(TokenConstants.JwtTokenKey);
                using var request = new HttpRequestMessage(HttpMethod.Get, "api/admin/taskstatus");

                if (!string.IsNullOrEmpty(token))
                {
                    request.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                }

                var response = await Http.SendAsync(request);

                if (response.IsSuccessStatusCode)
                {
                    taskStatuses = await response.Content.ReadFromJsonAsync<List<TaskStatusItem>>() ?? [];
                }

                StateHasChanged();
            }
        }
        catch
        {
            // ignore
        }
    }

    private class TaskStatusItem
    {
        public long Id { get; set; }
        public string Status { get; set; } = "";
        public bool IsActive { get; set; }
    }
}
