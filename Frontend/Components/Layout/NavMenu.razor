@using Frontend.Services.Constants
@rendermode InteractiveServer
@inject Frontend.Services.Interfaces.IJsTokenStorage JsTokenStorage

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">TaskMgmt Frontend</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (!HasToken)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span aria-hidden="true"></span> Login
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register">
                    <span aria-hidden="true"></span> Register
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="tasks/list">
                    <span aria-hidden="true"></span> Tasks
                </NavLink>
            </div>

            @if (IsAdmin)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin">
                        <span aria-hidden="true"></span> Admin
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

@code {
    private bool HasToken;
    private bool IsAdmin;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        try
        {
            var token = await JsTokenStorage.GetTokenAsync(TokenConstants.JwtTokenKey);
            HasToken = !string.IsNullOrEmpty(token);

            var isAdmin = await JsTokenStorage.GetTokenAsync(TokenConstants.IsAdminKey);
            IsAdmin = isAdmin == "1";
        }
        catch
        {
            HasToken = false;
        }

        StateHasChanged();
    }
}

